<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".view.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Movie DB"
        android:textColor="@color/blue_light"
        android:layout_marginStart="24dp"
        android:textSize="36sp"
        android:id="@+id/lbl_title_app"
        android:textStyle="bold"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/lbl_genre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_title_app"
        android:layout_marginTop="36dp"
        android:text="Choose genre you want"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginHorizontal="24dp"/>

    <View
        android:id="@+id/separator_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/lbl_genre"
        android:background="@color/blue_light"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_genre"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="16dp"
        android:clipToPadding="false"
        android:layout_marginHorizontal="8dp"
        android:layout_below="@id/separator_1"/>

</RelativeLayout>